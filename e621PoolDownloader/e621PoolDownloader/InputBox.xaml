<Window x:Class="e621PoolDownloader.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:e621PoolDownloader"
        mc:Ignorable="d" Height="145" Width="512" ResizeMode="NoResize" MinWidth="503" MinHeight="145">
    <Grid>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" Width="75" Height="20" VerticalAlignment="Bottom" IsCancel="True"/>
        <Button x:Name="buttonAccept" Content="Accept" Margin="0,0,90,10" HorizontalAlignment="Right" Width="75" IsDefault="True" Height="20" VerticalAlignment="Bottom" Click="ButtonAccept_Click"/>
        <TextBox x:Name="textBoxInput" Margin="10,36,10,0" TextChanged="TextBoxInput_TextChanged" MinWidth="475" MinHeight="23" Height="24" VerticalAlignment="Top"/>
        <TextBlock x:Name="labelText" Margin="10,4,10,0" TextWrapping="Wrap" Text="Placeholder" VerticalAlignment="Top"/>
    </Grid>
</Window>
